[alias]
	co = checkout
	ci = commit
	st = status
	pu = push
	pl = pull
	pub = "!f() { git push ${1:-origin} `git symbolic-ref HEAD`; }; f"
	pul = "!f() { git pull ${1:-origin} `git symbolic-ref HEAD`; }; f"
  	l = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  	ll = log --stat --abbrev-commit
  	d = diff --color-words
	rl = reflog
	df = diff
	dfc = diff --cached
	hist = log --oneline --graph --decorate
[web]
	browser = open
[color]
	branch = auto
	diff = auto
	status = auto
	interactive = auto
[color "branch"]
	current = yellow reverse
	local = yellow 
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

